
{{#modal-dialog close="closeAction"}}
  <div class="v-trade-dialog">

    {{#if selectedTeam.roster}}
      <header>Choose players to trade for...</header>
      <div class="roster">
        <div>
          {{roster-list model=selectedTeam onSelect="selectPlayer"}}
        </div>
      </div>
      <footer>
        <a class="button blue" {{action 'nextAction'}}>Next</a>
        <a class="button grey" {{action 'cancelSelectedTeam'}}>Back</a>
      </footer>
    {{else if showRoster}}

    {{else if showPicks}}

    {{else}}
      <header>Choose a team to trade with...</header>
      <div class="teams">
        {{#each teams as |team|}}
          <span {{action 'pickTeam' team}}>{{team.franchiseName}}</span>
        {{/each}}
      </div>
      <footer>
        <a class="button grey" {{action 'cencelAction'}}>Cancel</a>
      </footer>
    {{/if}}

  </div>
{{/modal-dialog}}
